---
// Astro Components
import Image from "astro/components/Image.astro";

// Data passed as props
const { whyMetasImportant } = Astro.props;
const { title, body, benefits, note, image, ctaText, ctaButton } =
  whyMetasImportant;
---

<section class="wrapper" id="why-important">
  <h2>{title}</h2>
  <div class="why-metas-content-grid">
    <div class="why-metas-text-content-wrapper">
      <div class="why-metas-text-content">
        <p>{body}</p>
        <ul>
          {benefits.map((benefit) => <li>{benefit}</li>)}
        </ul>
        <p><em>{note}</em></p>
      </div>

      <div class="cta-wrapper">
        <p>{ctaText}</p>
        <a href={ctaButton.buttonLink} class="btn btn-secondary"
          >{ctaButton.buttonText}</a
        >
      </div>
    </div>
    <picture>
      <Image
        src={image.imageUrl}
        alt={image.altText}
        width={400}
        height={300}
        loading="lazy"
        class="why-metas-illustration"
      />
    </picture>
  </div>
</section>

<style>
  #why-important {
    display: grid;
    gap: var(--size-3);
    margin-block: var(--size-5);
    padding: var(--size-5) 0;

    h2 {
      margin-bottom: var(--size-3);
      text-align: center;
    }
    .why-metas-content-grid {
      display: grid;
      gap: var(--size-4);
      grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
      justify-items: space-between;

      .why-metas-text-content-wrapper {
        display: flex;
        flex-direction: column;
        height: 100%;
        justify-content: space-between;

        .why-metas-text-content {
          display: grid;
          gap: var(--size-1);

          ul {
            list-style-type: disc;
            margin-left: var(--size-4);
          }

          em {
            color: var(--clr-primary-700);
            font-weight: var(--fw-italic-semi-bold);
          }
        }

        .cta-wrapper {
          display: grid;
          gap: var(--size-1);
        }
      }

      picture {
        .why-metas-illustration {
          border-radius: var(--border-radius-card);
          box-shadow: var(--box-shadow);
          object-fit: cover;
          max-width: 100%;
        }
      }
    }
  }
</style>
