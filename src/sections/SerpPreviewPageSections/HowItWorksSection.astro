---

// Data
import serpPreviewPageData from "../../data/serpPreviewPage.json";
const { howItWorksSection } = serpPreviewPageData.pageContent;
const { title, subTitle, steps } = howItWorksSection;
---

<section class="wrapper" id="how-it-works">
 <div class="section-titel-wrapper">
     <h2>{title}</h2>
     <span>{subTitle}</span>
 </div>


  <ol>
    {steps.map((step) => <li set:html={step.title} />)}
  </ol>
</section>

<style>
  #how-it-works {
    display: grid;

    .section-titel-wrapper {
      text-align: center;
      margin-bottom: var(--size-4);

      h2 {
        margin-bottom: var(--size-1);
      }
    }
  }
</style>
