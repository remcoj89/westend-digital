---
// Components
import Button from "../../components/Button.astro";
// Data via props
const { content, sectionId } = Astro.props;
---

<section class="hidden" id={sectionId}>
  <div class="wrapper">

    <h2>{content.title}</h2>
    <p>{content.content}</p>
    <Button href={content.cta.url} target="_blank" buttonStyle="btn-secondary">
      {content.cta.btnText}
    </Button>
  </div>
</section>

<style>
  section {
    background-image:
      linear-gradient(hsl(224, 75%, 11%, 75%)),
      url("/images/remco-programming.webp");
    background-repeat: no-repeat;
    background-size: cover;
    background-position: center;
    color: var(--clr-primary-100);
    padding-block: var(--size-15);
    margin-block-end: 0;

    h2 {
      color: var(--clr-primary-100);
    }

    .wrapper {
      align-items: center;
      flex-direction: column;
      justify-content: center;
      text-align: center;

      p {
        padding-block: var(--size-2) var(--size-4);
        margin-block-end: var(--size-4);
      }

    }
  }
</style>
