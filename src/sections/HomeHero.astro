---
import Image from "astro/components/Image.astro"

const {
  title,
  subTitle,
  ctaBtn,
  image,
  backgroundImage
} = Astro.props
---

<header class="wrapper">
  <div class="hero-copy">
    <span>Van Visie naar resultaat</span>
    <h1>{title}</h1>
    <div>
      <p>{subTitle[0]}</p>
      <p>{subTitle[1]}</p>
    </div>

    <a href="/contact" class="btn btn-hero" id="hero-btn">{ctaBtn}</a>
  </div>
  <div class="hero-image-wrapper">
    <!-- <a href="/projecten" class="hero-image-button btn btn-white">Bekijk mijn laatste werk</a> -->
    <Image src={image.imgUrl}  alt={image.imgAlt} width={500} height={500} class="image" />
  </div>
</header>

<style>
  header {
    display: flex;
    padding-block: 24rem var(--size-10);
    position: relative;
    justify-content: space-between;
    gap: var(--size-3);

    .hero-copy {
      flex-grow: 1;
      width: 50%;

      h1 {
        margin-block: var(--size-1) ;
      }

      div {
        display: grid;
        gap: var(--size-1);
        width: 80%;
      }

    }

    .hero-image-wrapper {
      width: 40%;
      height: 100%;
      flex-grow: 1;
      img {
        border-radius: var(--border-radius-img);
        width: 100%;
        height: 100%;
        box-shadow: var(--box-shadow);
        object-fit: cover;
      }
    }
  }
</style>
