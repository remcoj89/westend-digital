---
const { title, paragraph, buttonText, buttonLink  } = Astro.props;
---

<section class="wrapper small-cta-section" id="small-cta-section">
  <h2>{title}</h2>
  <p>{paragraph}</p>
  <a class="btn btn-secondary-open" href={buttonLink}
    >{buttonText}</a
  >
</section>

<style>
  .small-cta-section {
    align-items: center;
    background-position: center;
    background-repeat: no-repeat;
    background-size: cover;
    background: var(--clr-primary-900);

    border-radius: var(--border-radius-card);
    box-shadow: var(--box-shadow);
    color: var(--clr-primary-100);
    flex-direction: column;
    gap: var(--size-2);
    padding: var(--size-4) var(--size-2);
    text-align: center;

    h2 {
      color: var(--clr-primary-100);
      font-size: var(--fs-700);
    }
  }
</style>
