---
import Image from "astro/components/Image.astro";

import { RedXIcon } from "../assets/icons";

const {
  title,
  paragraph,
  list,
  imageUrl,
  altText,
  flexDirection = "flex",
  sectionId = "",
  cta = null,
} = Astro.props;
---

<section class=`intro-section wrapper ${flexDirection}` id={sectionId}>
  <article class="copy-wrapper">
    <h2>{title}</h2>
    {
      paragraph.map((par: string) => {
        return <p set:html={par} />;
      })
    }
    {
      list && (
        <ul>
          {list.map((item: string) => {
            return (
              <li>
                <span>
                  <RedXIcon />
                </span>
                {item}
              </li>
            );
          })}
        </ul>
      )
    }
    {
      cta && (
        <a href={cta.url} class="btn btn-secondary">
          {cta.title}
        </a>
      )
    }
  </article>
  <div class="img-wrapper">
    <Image src={imageUrl} alt={altText} width={500} height={500} />
  </div>
</section>

<style>
  #problemSection {
    margin-block-end: 0;
  }
  #solutionSection {
    margin-block-start: 0;
  }

  .intro-section {
    gap: var(--size-5);
    align-items: center;

    .copy-wrapper {
      display: flex;
      flex-direction: column;
      gap: var(--size-1);
      width: 100%;

      li {
        align-items:normal;
        display: flex;
        gap: var(--size-1);
        list-style: none;
        margin-inline-start: var(--size-1);

        span {
          align-items: center;
          display: flex;
          height: var(--size-2);
          justify-content: center;
          width: var(--size-2);
        }
      }

      .italic-text {
        font-style: italic;
        color: var(--clr-primary-700);
      }
    }

    .img-wrapper {
      flex-grow: 1;
      box-shadow: var(--box-shadow);
      border-radius: var(--border-radius-img);
      overflow: hidden;
      align-self: stretch;
      margin-block: 5%;
      width: 100%;

      img {
        object-fit: cover;
        object-position: center;
        height: 100%;
        width: 100%;
      }
    }

    @media (width >= 1000px) {
      .copy-wrapper {
        display: flex;
        flex-direction: column;
        gap: var(--size-1);
        width: 60%;
      }

      .img-wrapper {
        flex-grow: 1;
        box-shadow: var(--box-shadow);
        border-radius: var(--border-radius-img);
        overflow: hidden;
        align-self: stretch;
        margin-block: 5%;
        width: 40%;

        img {
          object-fit: cover;
          object-position: center;
          height: 100%;
          width: 100%;
        }
      }
    }
  }
</style>
