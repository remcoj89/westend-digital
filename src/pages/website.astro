---
// Layouts
import Layout from "../layouts/Layout.astro";

// Sections
import IntroSection from "../sections/IntroSection.astro";
import FooterSection from "../sections/FooterSection.astro";
import FaqSection from "../sections/SharedSections/FaqSection.astro";

// Components
import Header from "../components/Header.astro";

// Data
import PageData from "../data/website.json";
import TestemonialSection from "../sections/websitePage/testemonialSection.astro";

const {
  herkenbaarSection,
  heroSection,
  metaDescription,
  metaTitle,
  ogImage,
  ogUrl,
  faqSection,
  testemonialsSection,
} = PageData.pageContent;
---

<Layout
  description={metaDescription}
  ogDescription={metaDescription}
  ogImageAlt={ogImage.ogImageAlt}
  ogImageUrl={ogImage.ogImageUrl}
  ogTitle={metaTitle}
  ogUrl={ogUrl}
  title={metaTitle}
>
  <Header>
    <div>
      <h1 set:html={heroSection.title} />
      <p set:html={heroSection.subtitle} />
      <a href={heroSection.ctaBtnUrl} class="btn btn-cta"
        >{heroSection.ctaBtn}</a
      >
    </div>
  </Header>

  <main>
    <IntroSection
      altText={herkenbaarSection.altText}
      imageUrl={herkenbaarSection.imageUrl}
      paragraph={herkenbaarSection.paragraph}
      title={herkenbaarSection.title}
    />

    <!-- <section class="wrapper hidden" id="website-how-we-work">
      <div class="text-center margin-inline-auto">
        <h2>Onze aanpak</h2>

        <p>
          Wij geloven in een persoonlijke aanpak. Samen met jou kijken we naar
          jouw wensen en doelen, zodat we een website kunnen creÃ«ren die perfect
          aansluit bij jouw bedrijf.
        </p>
      </div>
    </section> -->

    <TestemonialSection testemonialsSection={testemonialsSection} />

  </main>

  <section class="wrapper hidden">
    <div class="text-center margin-inline-auto">
      <h2>Onze diensten</h2>
      <p>
        Wij bieden verschillende diensten aan, van het ontwerpen van een nieuwe
        website tot het optimaliseren van je bestaande site. Ook bieden we
        ondersteuning bij het onderhouden van je website.
      </p>
    </div>
  </section>

  <FaqSection faqSection={faqSection} sectionId="website-faq-section" />
</Layout>

<FooterSection />


