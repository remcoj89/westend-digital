---
import Layout from "../../layouts/Layout.astro";
import Header from "../../components/Header.astro";
import Project from "../../components/Project.astro";
import CtaSection from "../../sections/CtaSection.astro";
import FooterSection from "../../sections/FooterSection.astro";

import fetchProjects from "../../lib/fetchProjects";

const projects = await fetchProjects()
---

<Layout title="Projecten | Westend Digital">
  <Header>
    <div>
      <h1>Werk waar ik trots op ben</h1>
      <p>Een selectie van projecten waar ik onlangs aan heb gewerkt</p>
    </div>
  </Header>

  <section class="wrapper">
    <div class="grid">
      {
        projects.map((project, i) => {
          if(i % 2) {
            return  <Project flexDirection="flex" projectContent={project}/>
          } else {
            return   <Project flexDirection="flex-reverse" projectContent={project}/>
          }
        })
      }
    </div>
  </section>
  <CtaSection />
  <FooterSection />
</Layout>


