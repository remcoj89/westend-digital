---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import ContactForm from "../components/reactComponent.ContactForm/ContactForm";
import FooterSection from "../sections/FooterSection.astro";
import LetterSend from '../assets/letter_send.svg';

import { PhoneIcon, EmailIcon, LocationIcon} from "../assets/icons"
---

<Layout title="Contact | Westend Digital">
  <Header>
    <div>
      <h1>Neem contact met me op</h1>
      <p>Ik ben benieuwd waar je mee bezig bent, waar je tegenaan loopt en hoe ik je kan helpen met je bedrijf. Als je denkt dat we een goede match zijn, neem dan hieronder contact met mij op.</p>
    </div>
  </Header>
  <main>
    <section class="wrapper">
      <div class="flex contact-wrapper">
        <div class="adress-wrapper">
          <h3>Contact informatie</h3>
          <ul role="list">
            <li><a href="tel:+31722029324"><PhoneIcon iconFill="var(--clr-primary-100)"/> 072-2029324</a></li>
            <li><a href="mailto:info@westend-digital.nl?subject=Contact verzoek"><EmailIcon iconFill="var(--clr-primary-100)"/> info@westend-digital.nl</a></li>
            <li>
              <LocationIcon iconFill="var(--clr-primary-100)"/>
              <span>Oosteinde 10, <br/>1636XV, Schermerhorn</span>
            </li>
          </ul>

          <div class="circle circle-small" />
          <div class="circle circle-big" />
        </div>
        <div id="contact-form">
          <ContactForm client:load />
          <LetterSend />
        </div>
      </div>
    </section>
  </main>
  <FooterSection />
</Layout>

<style>

  .contact-wrapper {
    align-items: center;
    margin-block-end: var(--size-10);
    width: 100%;

    .adress-wrapper {
      background-color: var(--clr-primary-900);
      border-radius: var(--border-radius-card);
      color: var(--clr-primary-100);
      height: 100%;
      overflow: hidden;
      padding-block-end: 5rem;
      padding-block-start: var(--size-4);
      padding-inline: var(--size-4);
      position: relative;
      width: 100%;

      h3 {
        font-size: var(--fs-600);
        font-weight: var(--fw-semi-bold);
        line-height: var(--lh-200);
       }
      ul {
        display: grid;
        gap: var(--size-1);
        margin-top: 5rem;

        li,
        a {
            align-items: center;
            display: flex;
            gap: var(--size-1);
            text-decoration: none;
           }

        a:hover {
          text-decoration: underline;
        }
       }

    .circle {
      background-color: var(--clr-primary-100);
      border-radius: 100%;
      opacity: 10%;
      position: absolute;
     }

    .circle-small {
      --_circle-height: 13.8rem;
      --_circle-width: 13.8rem;
      bottom: 7.5rem;
      height: var(--_circle-height);
      right: 7.5rem;
      width: var(--_circle-width);
      z-index: 10;
     }
    .circle-big {
        --_circle-height: 26.9rem;
        --_circle-width: 26.9rem;
        bottom: -10rem;
        height: var(--_circle-height);
        right: -10rem;
        width: var(--_circle-width);
      }
     }

    #contact-form {
      width: 100%;
     }

     @media(width >= 67.5em) {
      .adress-wrapper {
        width: 40%;
      }

      #contact-form {
        width: 60%;
      }
     }
  }

</style>
