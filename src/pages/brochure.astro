---
// Sections
import BannerCta from "../components/reactComponent.BannerCta/BannerCta.jsx";
import BrochureClosingCtaSection from "../sections/BrochureClosingCtaSection.astro";
import DoubleReviewSection from "../sections/DoubleReviewSection.astro";
import DownloadFormSection from "../sections/DownloadFormSection.astro";
import FunnelLayout from "../layouts/FunnelLayout.astro";
import Header from "../components/Header.astro";
import HerkenbaarSection from "../sections/HerkenbaarSection.astro";
import IntroSection from "../sections/IntroSection.astro";
import OthersVsUsSection from "../sections/OthersVsUsSection.astro";
import WhatIfSection from "../sections/WhatIfSection.astro";
import WhatYouGetSection from "../sections/WhatYouGetSection.astro";
import WhyUsSection from "../sections/WhyUsSection.astro";

// Components
import CtaDownloadButton from "../components/CtaDownloadButton.astro";

// Data
import PageData from "../data/brochure.json";
import WhoIsThisForSection from "../sections/WhoIsThisForSection.astro";

const {
  aboutUsSection,
  brochureClosingCtaSection,
  downloadSection,
  herkenbaarSection,
  heroSection,
  metaDescription,
  metaTitle,
  ogImage,
  ogUrl,
  othersVsUsSection,
  waaromKiezenSection,
  watAlsSection,
  watJeKrijgtSection,
  whoIsThisForSection,
} = PageData.pageContent;
---

<FunnelLayout
  description={metaDescription}
  ogDescription={metaDescription}
  ogImageAlt={ogImage.ogImageAlt}
  ogImageUrl={ogImage.ogImageUrl}
  ogTitle={metaTitle}
  ogUrl={ogUrl}
  title={metaTitle}
  >
  <Header>
    <div>
      <h1 set:html={heroSection.title} />
      <p set:html={heroSection.subtitle} />

      <!-- CTA Download Button -->
      <CtaDownloadButton
        AriaLabel={heroSection.ariaLabel}
        CtaBtn={heroSection.ctaBtn}
        Title={heroSection.ctaBtn}
        Url={heroSection.ctaBtnUrl}
      />
    </div>
  </Header>

  <main id="brochure-page">
    <!-- Herkenbaar Section -->
    <HerkenbaarSection
      altText={herkenbaarSection.altText}
      ctaBtn={herkenbaarSection.ctaBtn}
      ctaBtnUrl={herkenbaarSection.ctaBtnUrl}
      imageUrl={herkenbaarSection.imageUrl}
      paragraph={herkenbaarSection.paragraph}
      title={herkenbaarSection.title}
    />

    <!-- What if Section -->
    <WhatIfSection
      altText={watAlsSection.altText}
      ctaBtn={watAlsSection.ctaBtn}
      ctaBtnUrl={watAlsSection.ctaBtnUrl}
      imageUrl={watAlsSection.imageUrl}
      listFooter={watAlsSection.listFooter}
      listItems={watAlsSection.listItems}
      listTitle={watAlsSection.listTitle}
      title={watAlsSection.title}
    />

    <!-- What you get section -->
    <WhatYouGetSection
      items={watJeKrijgtSection.items}
      title={watJeKrijgtSection.title}
      watJeKrijgtSection={watJeKrijgtSection}
    />

    <!-- Review Section -->
    <DoubleReviewSection sectionId="review-section" />
    <!-- Cta Sectoin -->

    <!-- About me section -->
    <IntroSection
      altText={aboutUsSection.altText}
      imageUrl={aboutUsSection.imageUrl}
      paragraph={aboutUsSection.paragraph}
      sectionId="about-us-section"
      title={aboutUsSection.title}
    />
    <!-- Others vs Us Section -->
    <OthersVsUsSection
      title={othersVsUsSection.title}
      intro={othersVsUsSection.intro}
      competition={othersVsUsSection.competition}
      westendDigital={othersVsUsSection.westendDigital}
      sectionId="others-vs-us-section"
    />
    <!-- Closing Call to Action Section -->
    <BrochureClosingCtaSection
      ariaLabel={brochureClosingCtaSection.ariaLabel}
      ctaBtn={brochureClosingCtaSection.ctaBtn}
      ctaBtnUrl={brochureClosingCtaSection.ctaBtnUrl}
      disclaimer={brochureClosingCtaSection.disclaimer}
      subtitle={brochureClosingCtaSection.subtitle}
      title={brochureClosingCtaSection.title}
    />

    <!-- Why us section -->
    <WhyUsSection
      altText={waaromKiezenSection.image.altText}
      benefits={waaromKiezenSection.benefits}
      imageUrl={waaromKiezenSection.image.imageUrl}
      intro={waaromKiezenSection.intro}
      sectionId="why-us-"
      title={waaromKiezenSection.title}
    />
    <!-- Review Section -->
    <!-- <DoubleReviewSection /> -->

    <!-- Who is this for Section -->
    <WhoIsThisForSection
      ariaLabel={whoIsThisForSection.ariaLabel}
      competition={whoIsThisForSection.competition}
      ctaBtn={whoIsThisForSection.ctaBtn}
      ctaBtnUrl={whoIsThisForSection.ctaBtnUrl}
      sectionId="who-is-this-for-section"
      westendDigital={whoIsThisForSection.westendDigital}
    />

    <!-- Download section -->
    <DownloadFormSection
      ariaLabel={downloadSection.ariaLabel}
      ctaBtn={downloadSection.ctaBtn}
      formNotification={downloadSection.formNotification}
      paragraph={downloadSection.paragraph}
      title={downloadSection.title}
    />
    <!-- Banner Cta -->
    <BannerCta client:load />
  </main>
</FunnelLayout>

<style>
  #brochure-page {
    position: relative;
  }
</style>
