---
// Layouts
import Layout from "../layouts/Layout.astro";

// Sections
import AboutMeSection from "../sections/websitePage/aboutMeSection.astro";
import CtaSection from "../sections/websitePage/ctaSection.astro";
import FaqSection from "../sections/SharedSections/FaqSection.astro";
import FooterSection from "../sections/FooterSection.astro";
import ForWhoSection from "../sections/websitePage/forWhoSection.astro";
import IntroSection from "../sections/IntroSection.astro";
import LastCallCtaSection from "../sections/websitePage/lastCallCtaSection.astro";
import PracticalInfoSection from "../sections/websitePage/practicalInfoSection.astro";
import ResultSection from "../sections/websitePage/resultSection.astro";
import ReviewSection from "../sections/websitePage/reviewSection.astro";
import SalesHero from "../sections/websitePage/salesHero.astro";
import SolutionSection from "../sections/websitePage/solutionSection.astro";
import TrustSection from "../sections/websitePage/trustSection.astro";
import WhyNowSection from "../sections/websitePage/whyNowSection.astro";

// Data
import PageData from "../data/website.json";

const {
  aboutMeSection,
  ctaSection,
  faqSection,
  firstReviewSection,
  forWhoSection,
  heroSection,
  lastCallCtaSection,
  metaDescription,
  metaTitle,
  ogImage,
  ogUrl,
  practivalInfoSection,
  problemSection,
  resultSection,
  secondReviewSection,
  solutionSection,
  trustSection,
  whyNowSection,
} = PageData.pageContent;
---

<Layout
  description={metaDescription}
  ogDescription={metaDescription}
  ogImageAlt={ogImage.ogImageAlt}
  ogImageUrl={ogImage.ogImageUrl}
  ogTitle={metaTitle}
  ogUrl={ogUrl}
  title={metaTitle}
>
  <SalesHero>
    <div class="hero-content">
      <h1 set:html={heroSection.title} />
      <p set:html={heroSection.subtitle} />
      <!-- <a href={heroSection.cta.url} class="btn btn-cta"
          >{heroSection.cta.title}</a
        > -->
    </div>

    <div class="contact-form-wrapper">
      <h2>Start jouw strategie gesprek</h2>

      <div class="_form_1"></div><script
        src="https://westenddigital.activehosted.com/f/embed.php?id=1"
        charset="utf-8"></script>
    </div>
  </SalesHero>

  <main>
    <!-- Intro section what is the problem -->
    <IntroSection
      altText={problemSection.image.altText}
      imageUrl={problemSection.image.url}
      list={problemSection.list}
      paragraph={problemSection.content}
      sectionId="problemSection"
      title={problemSection.title}
    />

    <!--Section what is the solution -->
    <SolutionSection sectionId="solutionSection" content={solutionSection} />
    <!-- First testemonial -->
    <ReviewSection
      content={firstReviewSection}
      sectionId="firstReviewSection"
    />
    <!-- Result section -->
    <ResultSection content={resultSection} sectionId="resultSection" />
    <!-- Practical info -->
    <PracticalInfoSection
      content={practivalInfoSection}
      sectionId="practicalInfoSection"
    />
    <!-- Second testemonial -->
    <ReviewSection
      content={secondReviewSection}
      sectionId="secondReviewSection"
    />
    <!-- ctaSection -->
    <CtaSection content={ctaSection} sectionId="ctaSection" />
    <!-- trustSection -->
    <TrustSection content={trustSection} sectionId="trustSection" />
    <!-- aboutMeSection -->
    <AboutMeSection content={aboutMeSection} sectionId="aboutMeSection" />
    <!-- forWhoSection -->
    <ForWhoSection content={forWhoSection} sectionId="forWhoSection" />
    <!-- whyNowSection -->
    <WhyNowSection content={whyNowSection} sectionId="whyNowSection" />
    <!-- faqSection -->
    <FaqSection faqSection={faqSection} sectionId="website-faq-section" />
    <!-- lastCallCtaSection -->
    <LastCallCtaSection
      content={lastCallCtaSection}
      sectionId="lastCallCtaSection"
    />
  </main>
  <FooterSection />
</Layout>
