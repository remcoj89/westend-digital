---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import IntroSection from '../sections/IntroSection.astro';
import UspSection from '../sections/UspSection.astro';
import HowWeWorkSection from '../sections/HowWeWorkSection.astro';
// import ReviewSection from '../sections/ReviewSection.astro';
import FaqSection from '../sections/FaqSection.astro';
import CtaSection from '../sections/CtaSection.astro';
import FooterSection from '../sections/FooterSection.astro';
import data from "../data/homePage.json"


const {
  heroTitle,
  heroSubtitle,
  introSection,
  sectionCodeToConnection,
  howWeWorkSection,
  faqSection
} = data.pageContent
---

<Layout title="Westend Digital">
  <Header>
    <div>
      <h1>{heroTitle}</h1>
      <span>{heroSubtitle}</span>
      <a href="/contact" class="btn btn-secondary">
        Laten we kennis maken
      </a>
    </div>
  </Header>
	<main>
    <IntroSection
      title={introSection.title}
      paragraph={introSection.paragraph}
      imageUrl={introSection.imageUrl}
      altText={introSection.altText}
    />
    <IntroSection
      title={sectionCodeToConnection.title}
      paragraph={sectionCodeToConnection.paragraph}
      imageUrl={sectionCodeToConnection.imageUrl}
      altText={sectionCodeToConnection.altText}
      flexDirection="flex-reverse"
  />
    <UspSection />
    <HowWeWorkSection
      title={howWeWorkSection.title}
      steps={howWeWorkSection.steps}
    />
    <!-- <ReviewSection /> -->
    <FaqSection
      title={faqSection.title}
      faqs={faqSection.faqs}
    />
    <CtaSection />
    <FooterSection />
	</main>
</Layout>
