---
import { BookOpen } from "../assets/icons";

const {
  AriaLabel,
  CtaBtn,
  Url,
  CtaBtnTitle,
  IconColor,
  ButtonClass = "btn btn-secondary",
} = Astro.props;
---

<a
  aria-label={AriaLabel}
  class={ButtonClass}
  href={Url}
  rel="noopener noreferrer"
  title={CtaBtnTitle}
  >
  <BookOpen iconFill={IconColor} /> {CtaBtn}
  </a
>


<style>
  a {
    align-items: center;
    display: inline-flex;
  }
</style>
