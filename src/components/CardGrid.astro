---
const { cardStyle = "" } = Astro.props
---


<div class=`card-grid ${cardStyle}`>
  <slot />
</div>

<style>
  .card-grid {
    align-items: stretch;
    display: grid;
    gap: var(--size-4);
    grid-template-columns: repeat(auto-fit, minmax(450px, 1fr));
    width: 100%;


    a {
      text-decoration: none;
      height: 100%;

    }
    p {
      -webkit-box-orient: vertical;
      -webkit-line-clamp: 4;
      display: -webkit-box;
      line-clamp: 4;
      overflow: hidden;
    }
  }

  .small-cards {
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
  }
</style>
